    //- Filtros simples (opcional)
    .filtros
        label Estado:
        select#filtroEstado
            option(value="todas") Todas
            option(value="pendientes") Pendientes
            option(value="aceptadas") Aceptadas
            option(value="rechazadas") Rechazadas
//- Listar tabla
table#tablaPostulaciones
